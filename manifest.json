{
  "manifest_version": 3,
  "name": "NetPass â€” LNMIIT WiFi",
  "version": "2.0",
  "description": "Automatic WiFi login for LNMIIT. Never enter credentials again.",
  "permissions": ["storage", "scripting", "tabs", "alarms"],
  "host_permissions": ["https://172.22.2.6/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
